{
  "compilerOptions": {
    "lib": ["DOM", "ESNext"],
    "sourceMap": false,
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "esModuleInterop": true,
    "module": "CommonJS",
    "moduleResolution": "Node",
    "target": "ESNext",
    "resolveJsonModule": true,
    "experimentalDecorators": true,
    "typeRoots": ["node_modules/@types"],
    "types": ["node"],
  },
}
