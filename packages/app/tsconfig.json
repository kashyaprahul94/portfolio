{
  "compilerOptions": {
    "lib": ["dom", "ESNext"],
    "sourceMap": false,
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "esModuleInterop": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "ESNext",
    "resolveJsonModule": true,
    "experimentalDecorators": true,
    "typeRoots": ["node_modules/@types"],
    "types": ["node"],

    "noImplicitUseStrict": false,
    "baseUrl": "./",
    "paths": {
      "@components/*": ["./src/components/*"],
      "@contexts/*": ["./src/contexts/*"],
      "@data": ["./src/data"],
      "@data/*": ["./src/data/*"],
      "@hooks/*": ["./src/hooks/*"],
      "@style/*": ["./src/style/*"],
      "@types": ["./src/types"],
      "@types/*": ["./src/types/*"],
      "@util/*": ["./src/util/*"]
    },
    "outDir": "./build/src"
  },
  "exclude": ["node_modules", "build"],
  "include": ["src/*.ts"]
}
