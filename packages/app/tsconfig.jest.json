{
  "compilerOptions": {
    "lib": ["dom", "ESNext"],
    "sourceMap": false,
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "esModuleInterop": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "ESNext",
    "resolveJsonModule": true,
    "experimentalDecorators": true,
    "typeRoots": ["node_modules/@types"],
    "types": ["node"],

    "jsx": "react",
    "removeComments": true
  },
  "exclude": ["node_modules", "build", "out", ".next"]
}
