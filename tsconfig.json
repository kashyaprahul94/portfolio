{
  "compilerOptions": {
    "lib": ["dom", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "esModuleInterop": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "esnext",
    "resolveJsonModule": true,
    "baseUrl": "./",
    "paths": {
      "@components/*": ["./src/components/*"],
      "@contexts/*": ["./src/contexts/*"],
      "@data": ["./src/data"],
      "@data/*": ["./src/data/*"],
      "@hooks/*": ["./src/hooks/*"],
      "@style/*": ["./src/style/*"],
      "@types": ["./src/types"],
      "@types/*": ["./src/types/*"],
      "@util/*": ["./src/util/*"]
    },
    "outDir": "./build/src",
    "typeRoots": ["./node_modules/@types"]
  },
  "exclude": ["node_modules", "build"],
  "include": ["src/*.ts"]
}
